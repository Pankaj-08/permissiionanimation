<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <View
        android:id="@+id/viewfirst"
        android:layout_marginLeft="24dp"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#000000" />

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
         android:id="@+id/l1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <cdflynn.android.library.checkview.CheckView
        android:id="@+id/check"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#ffffff"
        app:checkView_strokeColor="@color/green"
        app:checkView_strokeWidth="3dp"/>

        <ImageView
            android:visibility="gone"
            android:background="#ffffff"
            android:src="@drawable/uncheck"
            android:id="@+id/notcheck"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:background="#ffffff"
            android:src="@drawable/ic_round"
            android:id="@+id/tick"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/l1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/l1"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="22sp"
        tools:text="LÃ©on: The Professional" />

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/sub_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView

            android:id="@+id/sub_item_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            tools:text="Genre:  Crime, Drama, Thriller" />

        <Button
            android:id="@+id/conti"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:text="GRANT ACCESS"
            android:background="@drawable/buttoncircular"
            android:layout_width="150dp"
            android:layout_height="50dp"/>
    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>